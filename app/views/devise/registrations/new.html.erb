<h2><%= t('.sign_up') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :profile %><br />
    <%= f.file_field :profile %>
  </div>

  <div class="field">
    <%= f.label :status %><br />
    <%= f.select :status, User.statuses.keys %>
  </div>

  <div class="field">
    <%= f.label :region %><br />
    <%= f.select :region, User.regions.keys %>
  </div>

  <div class="field">
    <%= f.label :role %><br />
    <%= f.select :role, User.roles.keys %>
  </div>

  <div class="field">
    <%= f.label :career %> <i>(연차를 입력해주세요.)</i> <br />
    <%= f.number_field :career, max: 10, min: 0 %>
  </div>

  <div class="actions">
    <%= f.submit t('.sign_up') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
